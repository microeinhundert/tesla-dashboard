{
  "name": "tesla-dashboard",
  "version": "1.0.0",
  "description": "Fun project recreating the Tesla Model X and S dashboard with HTML, CSS and Vue.js.",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve --open",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/microeinhundert/tesla-dashboard"
  },
  "keywords": [
    "vue",
    "vuex",
    "tesla",
    "teslamotors",
    "modelx",
    "models",
    "dashboard"
  ],
  "dependencies": {
    "metrics-graphics": "^2.14.0",
    "normalize.css": "^8.0.0",
    "vue": "^2.5.16",
    "vuex": "^3.0.1"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^3.0.0-beta.9",
    "@vue/cli-plugin-eslint": "^3.0.0-beta.9",
    "@vue/cli-service": "^3.0.0-beta.9",
    "@vue/eslint-config-airbnb": "^3.0.0-beta.9",
    "lint-staged": "^7.1.0",
    "node-sass": "^4.9.0",
    "postcss-easing-gradients": "^2.0.1",
    "postcss-short": "^4.1.0",
    "sass-loader": "^7.0.1",
    "vue-template-compiler": "^2.5.16"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "vue-cli-service lint",
      "git add"
    ],
    "*.vue": [
      "vue-cli-service lint",
      "git add"
    ]
  }
}
